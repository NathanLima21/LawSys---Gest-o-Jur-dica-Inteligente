datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Esquema focado em Advocacia

model Advogado {
  id        String     @id @default(uuid())
  nome      String
  email     String     @unique
  senha     String
  oab       String     // Campo acrescentado aqui
  clientes  Cliente[]
  processos Processo[]
  createdAt DateTime   @default(now())
}

model Cliente {
  id        String    @id @default(uuid())
  nome      String
  cpf_cnpj  String    @unique
  telefone  String?
  email     String?
  advogadoId String
  advogado   Advogado  @relation(fields: [advogadoId], references: [id])
  processos  Processo[]
  createdAt  DateTime  @default(now())
}

model Processo {
  id          String       @id @default(uuid())
  numero      String       @unique
  titulo      String
  status      String       @default("Ativo")
  tipo        String?
  tribunal    String?
  clienteId   String
  cliente     Cliente      @relation(fields: [clienteId], references: [id])
  advogadoId  String
  advogado    Advogado     @relation(fields: [advogadoId], references: [id])
  prazos      Prazo[]
  documentos  Documento[]
  financeiro  Financeiro[]
  createdAt   DateTime     @default(now())
}

model Prazo {
  id          String   @id @default(uuid())
  descricao   String
  dataLimite  DateTime
  finalizado  Boolean  @default(false)
  processoId  String
  // ADICIONADO: onDelete: Cascade
  processo    Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
}

model Documento {
  id          String   @id @default(uuid())
  nome        String
  url         String
  publicId    String
  tipo        String
  processoId  String
  // ADICIONADO: onDelete: Cascade
  processo    Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model Financeiro {
  id          String   @id @default(uuid())
  descricao   String
  valor       Decimal
  tipo        String
  status      String
  processoId  String
  // ADICIONADO: onDelete: Cascade
  processo    Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  data        DateTime @default(now())
}